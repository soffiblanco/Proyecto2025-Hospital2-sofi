{
  "title": "App Performance",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 2,
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Availability (blackbox)",
      "datasource": { "type": "prometheus", "uid": "PROMDS" },
      "targets": [
        { "expr": "probe_success{job=\"blackbox-http\"}", "legendFormat": "{{instance}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP p95 duration (s)",
      "datasource": { "type": "prometheus", "uid": "PROMDS" },
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(probe_http_duration_seconds_bucket[5m])) by (le, instance))", "legendFormat": "{{instance}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Container CPU % (app_dev/uat/prod)",
      "datasource": { "type": "prometheus", "uid": "PROMDS" },
      "targets": [
        { "expr": "100 * sum by (name) (rate(container_cpu_usage_seconds_total{name=~\"app_(dev|uat|prod)\"}[2m]))", "legendFormat": "{{name}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Container Memory bytes (app_dev/uat/prod)",
      "datasource": { "type": "prometheus", "uid": "PROMDS" },
      "targets": [
        { "expr": "container_memory_usage_bytes{name=~\"app_(dev|uat|prod)\"}", "legendFormat": "{{name}}" }
      ]
    }
  ]
}


